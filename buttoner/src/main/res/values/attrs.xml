<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTestView">
        <attr name="square_color" format="color" />
        <attr name="square_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DynamicButton">
        <!--    Button text params    -->
        <attr name="button_text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>

        <attr name="desc_text" format="string"/>
        <attr name="desc_text_size" format="dimension"/>
        <attr name="desc_textColor" format="color"/>
<!--        <attr name="desc_icon" format="reference" />-->
<!--        <attr name="desc_icon_size" format="dimension" />-->

        <!-- Icon drawable to display at the start of this view. -->
        <attr name="icon" format="reference"/>
        <!-- Specifies the width and height to use for the icon drawable. -->
        <attr name="iconSize" format="dimension"/>
        <!-- Padding between icon and button text. -->
        <attr name="iconPadding" format="dimension"/>

        <!-- Tint for icon drawable to display. -->
        <attr name="iconTint" format="color"/>
        <!-- Tint mode for icon drawable to display. -->
        <attr name="iconTintMode"/>
    </declare-styleable>

</resources>